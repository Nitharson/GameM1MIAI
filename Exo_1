import random

class Warrior:
    def __init__(self,nom):
        self.nom = nom
        self.damage = random.randint(3, 5)
        self.chance = 5
        self.flee = 3
        self.price = 10
        self.unit_type = 'warrior'



class Hunter:
    def __init__(self,nom):
        self.nom = nom
        self.damage = random.randint(1, 2)
        self.chance = 10
        self.flee = 20
        self.price = 25
        self.unit_type = 'hunter'

class Gobelin:
    def __init__(self,nom):
        self.nom = nom
        self.damage = random.randint(2, 3)
        self.loot = random.randint(1, 1.5)
